{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": "none",
            "problemMatcher": ["$gcc"],
            "detail": "Build and run the active C++ file",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run exe",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "group": "none"
        },
        {
            "label": "build+run",
            "dependsOn": [
                "build and run",
                "run exe"
            ],
            "problemMatcher": []
        }
    ]
}
